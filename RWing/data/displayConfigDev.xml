<viewManager 
    xmlns="http://ruisystem.net/displaycfg"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ruisystem.net/displaycfg displaycfg.xsd"
    defaultCameraX="0.0" defaultCameraY="0.0" defaultCameraZ="300.0"
    stereoEyeDistance="6.0">
    <display width="300.0" height="300.0" stereo="false"> 
        <center x="0.0" y="0.0" z="0.0" />
        <up     x="0.0"  y="-1.0"  z="0.0" />
        <normal x="0.0"   y="0.0"   z="1.0" />
    </display>
	<!-- It is possible to have any number of displays, whose 			 parameters can be read from display[] array.  
		 If stereo="false", Xth display's keystone parameters are 		 mapped to viewManager.keystonedView[Y-1]. If 				 stereo="true", Xth display's keystone parameters are 		 mapped to viewManager.keystonedView[Y-1] and to 			 viewManager.keystonedView[Y], where Y is the total 
		 number of keystonedView instances that were created by 		 other display elements of this file before the Xth display 		 element.     -->
</viewManager>
